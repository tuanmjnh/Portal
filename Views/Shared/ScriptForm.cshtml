@Scripts.Render("~/bundles/jqueryval")
@{
    var ValueSetting = Portal.Controllers.BaseController.Value(Authentication.Auth.AuthUser.id.ToString(), TM.Common.Config.sub_key.form_use_label);
}
<script>
    $(function () {
        //
        $('.form-horizontal').TMSupportInput({ tooltip: true });

        //
        if(@(ValueSetting!=null? ValueSetting:"1")==@TM.Common.Config.value.no.ToString())
            $('.setting-label').each(function(){
                $(this).removeClass('show').next().addClass('col-md-offset-1');
        })
        else
            $('.control-label').each(function(){
                $(this).addClass('show');
            })
    })
</script>